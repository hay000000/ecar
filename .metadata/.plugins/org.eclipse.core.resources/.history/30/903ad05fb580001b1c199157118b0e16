package controller;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import logic.ShopService;

@Controller
public class DataController {
	private String key = "dJdxqPUTH6MJK8pvsxbGkbVqSg5h5re56ypOC542UYalBsZu7eKl56BjRL40vgooihlQZ%2BF4Bhy%2Bq6mh3zVxjQ%3D%3D"; 
	@Autowired private ShopService common;
	
	@RequestMapping("main")
	public String data(HttpSession session) {
		session.setAttribute("category", "da");
		
		return "data/list";
	}
	
	//약국 정보 조회 요청
		@ResponseBody @RequestMapping(value="/data/charger", produces="applications/json; charset=utf-8")
		public String pharmarcy_list(int pageNo) {
			StringBuilder url 
				= new StringBuilder("http://apis.data.go.kr/B552584/EvCharger/getChargerInfo");
			url.append("?serviceKey=" + key);

			
			return common.json_list(url);
		}
}
